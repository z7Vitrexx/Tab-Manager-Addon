{
  "manifest_version": 3,
  "name": "Tab Manager",
  "version": "1.0",
  "description": "Verwalte deine Browser-Tabs effizient",
  "permissions": [
    "tabs",
    "tabGroups",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "64": "icons/icon64.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "author": "Your Name",
  "homepage_url": "https://github.com/yourusername/Tab-Manager-Addon"
}
